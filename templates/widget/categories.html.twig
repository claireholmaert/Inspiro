<div class="p-4 bg-slate-200 rounded">
    <h4 class="italic mb-4">Cat√©gories</h4>
    <ol class="grid gap-4 grid-cols-2 text-blue-950">
        {% for category in categories %}
            <li class="flex items-center gap-x-6">
                <a href="{{ path('category_show', { slug: category.slug }) }}">
                    <span>{{ category.name }}</span>
                    <img src="{{ asset('images/' ~ category.icon) }}" alt="icon" width="25" height="25">
                </a>
            </li>
        {% endfor %}
    </ol>
</div>