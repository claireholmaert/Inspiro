{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}


    <div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <div class="ml-44">
                <div class="one"></div>
                <div class="two"></div>
                <div class="three"></div>
            </div>
            <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-blue-950">S'inscrire</h2>
        </div>

        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
            {{ form_start(registrationForm, { 'attr': { 'class': 'space-y-6'}}) }}
                <div>
                    <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Nom d'utilisateur</label>
                    <div class="mt-2">
                        {{ form_widget(registrationForm.username, { 'id': 'username', 'attr': { 'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-800 sm:text-sm sm:leading-6'}}) }}
                    </div>
                </div>

                <div>
                    <div class="flex items-center justify-between">
                        <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Mot de passe</label>
                    </div>
                    <div class="mt-2">
                        {{ form_widget(registrationForm.plainPassword.first, { 'id': 'password', 'attr': { 'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-800 sm:text-sm sm:leading-6' } }) }}
                    </div>
                    <div class="flex items-center justify-between mt-4">
                        <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-sm font-medium leading-6 text-gray-900">Confirmer le mot de passe</label>

                    </div>
                    <div class="mt-2">
                        {{ form_widget(registrationForm.plainPassword.second, { 'id': 'password', 'attr': { 'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-blue-800 sm:text-sm sm:leading-6' } }) }}
                    </div>
                </div>

                <div>
                    <button type="submit" class="flex w-full justify-center rounded-md bg-blue-950 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-900 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-900">{{ button_label | default("Valider") }}</button>
                </div>
            {{ form_end(registrationForm) }}

        </div>
    </div>

{% endblock %}
